@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="login_container">
        <div class="row justify-content-center">
            <div class="col-xs-12 col-sm-6 card shadow-lg mt-5">
                <h3 class="authTitle"> Sign up or <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a></h3>
                <form asp-route-returnUrl="@Model.ReturnUrl" id="account" class="loginForm card-body" autocomplete="off" method="POST">
                    <div asp-validation-summary="All" class="text-danger mb-1"></div>
                    <div class="input-group mb-1">
                        <div class="input-group-prepend ">
                            <span class="input-group-text">
                                <i class="fa fa-user"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" placeholder="Email address" asp-for="Input.Email">
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-prepend ">
                            <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        </div>
                        <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password">
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-prepend ">
                            <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        </div>
                        <input type="password" class="form-control" placeholder="Confirm password" asp-for="Input.ConfirmPassword">
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <hr/>
                    <div class="input-group mb-1">
                        <div class="input-group-prepend ">
                            <span class="input-group-text">
                                <i class="fa fa-edit"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" placeholder="First name" asp-for="Input.FirstName">
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-prepend ">
                            <span class="input-group-text">
                                <i class="fa fa-edit"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" placeholder="Last name" asp-for="Input.LastName">
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-prepend ">
                            <span class="input-group-text">
                                <i class="fa fa-edit"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" placeholder="Short description" asp-for="Input.ShortDescription">
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Input.ShortDescription" class="text-danger"></span>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Sign up</button>
                </form>
            </div>
        </div>
    </div>
</div>

