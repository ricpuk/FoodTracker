@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="container">


    <div class="login_container">
        <div class="row justify-content-center">
            <div class="col-xs-12 col-sm-6 card shadow-lg mt-5">
                <h3 class="authTitle">Login or <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a></h3>

                <form id="account" class="loginForm card-body" action="" autocomplete="off" method="POST">
                    <div class="input-group mb-1">
                        <div class="input-group-prepend ">
                            <span class="input-group-text">
                                <i class="fa fa-user"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" placeholder="Email address" asp-for="Input.Email">
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="input-group mb-1">
                        <div class="input-group-prepend ">
                            <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        </div>
                        <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password">
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" asp-for="Input.RememberMe">
                        <label class="form-check-label" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Login</button>


                </form>
            </div>
        </div>
    </div>



</div>

